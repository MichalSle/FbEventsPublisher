@model List<FbEvent>
@using EventsProvider;

@{
  ViewBag.Title = "Title some";
  Layout = "../Shared/_Layout.cshtml";
}

<div id="menu" style="float: left; width: 200px; border: solid 1px;">
    <nav>
        <ul>
            @Html.ActionLink("IT", "Index", new { Id = (int)FbCategory.It })
        </ul>
    </nav>
</div>

<div id="content" style="float: right; width: auto; border: solid 1px; margin: 0 auto 0 auto;">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div style="margin-bottom: 10px;">
            <div>
                @Html.LabelFor(m => m[i].Name)
                @Html.DisplayFor(m => m[i].Name)
            </div>
            <div>
                @Html.LabelFor(m => m[i].Description)
                @Html.DisplayFor(m => m[i].Description)
            </div>
            <div>
                @Html.LabelFor(m => m[i].Location)
                @Html.DisplayFor(m => m[i].Location)
            </div>
            <div>
                @Html.LabelFor(m => m[i].Owner)
                @Html.DisplayFor(m => m[i].Owner)
            </div>
            <div>
                @Html.LabelFor(m => m[i].StartDate)
                @Html.DisplayFor(m => m[i].StartDate)
            </div>
        </div>
    }
</div>